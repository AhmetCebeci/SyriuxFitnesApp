@page
@model IndexModel
@{
    ViewData["Title"] = "Profil Bilgileri";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-8">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label">Kullanıcı Adı (Email)</label>
            </div>

            <div class="row g-2 mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.FirstName" class="form-control" />
                        <label asp-for="Input.FirstName"></label>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.LastName" class="form-control" />
                        <label asp-for="Input.LastName"></label>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr />
            <h5>Fiziksel Bilgiler ve Hedefler</h5>

            <div class="row g-2 mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.Height" class="form-control" />
                        <label asp-for="Input.Height"></label>
                        <span asp-validation-for="Input.Height" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.Weight" class="form-control" />
                        <label asp-for="Input.Weight"></label>
                        <span asp-validation-for="Input.Weight" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.BirthDate" class="form-control" />
                <label asp-for="Input.BirthDate"></label>
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="Input.Gender" class="form-select">
                    <option value="Erkek">Erkek</option>
                    <option value="Kadın">Kadın</option>
                </select>
                <label asp-for="Input.Gender"></label>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="Input.FitnessGoal" class="form-select">
                    <option value="Kilo Verme">Kilo Verme (Yağ Yakımı)</option>
                    <option value="Hacim Kazanma">Hacim Kazanma (Kas Kütlesi)</option>
                    <option value="Güçlenme">Güçlenme (Powerlifting)</option>
                    <option value="Kondisyon">Kondisyon ve Sağlık</option>
                    <option value="Atletik Performans">Atletik Performans</option>
                    <option value="Rehabilitasyon">Rehabilitasyon</option>
                </select>
                <label asp-for="Input.FitnessGoal"></label>
            </div>

            <div class="d-flex flex-column gap-2">
                <button id="update-profile-button" type="submit" class="btn btn-lg btn-primary">Bilgileri Güncelle</button>

                <div class="d-flex gap-2">
                    <a asp-page="./ChangePassword" class="btn btn-lg btn-outline-secondary flex-grow-1">Şifre Değiştir</a>

                    <button type="button" class="btn btn-lg btn-danger flex-grow-1" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        Hesabımı Sil
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Hesap Silme Onayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="fw-bold">Emin misiniz? Bu işlem geri alınamaz!</p>

                @if (Model.ActiveAppointmentCount > 0)
                {
                    <div class="alert alert-warning">
                        <strong>Dikkat:</strong> Şu anda sistemde kayıtlı
                        <span class="badge bg-dark">@Model.ActiveAppointmentCount</span> adet randevunuz bulunmaktadır.
                        Hesabınızı silerseniz bu randevular da <u>kalıcı olarak silinecektir.</u>
                    </div>
                }
                else
                {
                    <p class="text-muted">Şu an aktif bir randevunuz bulunmamaktadır.</p>
                }

                <p>İşlemi onaylamak için lütfen şifrenizi giriniz:</p>

                <form id="delete-form" method="post" asp-page-handler="Delete">
                    <div class="form-floating mb-3">
                        <input asp-for="DeletePassword" type="password" class="form-control" id="deletePasswordInput" placeholder="Şifreniz" required />
                        <label>Şifre</label>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="showDeletePass" onclick="toggleDeletePassword()">
                        <label class="form-check-label" for="showDeletePass">
                            Şifreyi Göster
                        </label>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-danger">Evet, Hesabımı Sil</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleDeletePassword() {
        var x = document.getElementById("deletePasswordInput");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}