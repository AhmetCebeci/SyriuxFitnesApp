@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <section>
            <form id="account" method="post" class="shadow p-4 rounded bg-light">
                <h2 class="text-center mb-4">Syriux Fitness Giriş</h2>
                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email Adresi</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-2">
                    <input asp-for="Input.Password" class="form-control" id="passwordInput" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Şifre</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="showPassCheckbox" onclick="togglePassword()">
                    <label class="form-check-label text-muted small" for="showPassCheckbox">Şifreyi Göster</label>
                </div>

                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Giriş Yap</button>
                </div>

                <div class="mt-4 text-center">
                    <p>
                        Hesabın yok mu? <br />
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-bold fs-5">Hemen Kayıt Ol</a>
                    </p>
                </div>
            </form>
        </section>

        @{
            if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="mt-4 text-center">
                    <hr />
                    <h5>Veya şununla giriş yapın</h5>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-dark" name="provider" value="@provider.Name" title="@provider.DisplayName hesabınızla giriş yapın">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                </div>
            }
        }
    </div>
</div>

<script>
    function togglePassword() {
        var x = document.getElementById("passwordInput");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}