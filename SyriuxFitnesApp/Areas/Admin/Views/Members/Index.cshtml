@model IEnumerable<SyriuxFitnesApp.Models.AppUser>

@{
    ViewData["Title"] = "Üye Listesi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-people-fill"></i> Üye Listesi</h2>
        <span class="badge bg-primary fs-6">Toplam: @Model.Count() Üye</span>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Ad Soyad</th>
                        <th>Email</th>
                        <th>Kayıt Türü</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">
                                <i class="bi bi-person-circle text-secondary me-2"></i>
                                @item.FirstName @item.LastName
                            </td>
                            <td>@item.Email</td>
                            <td>
                                <span class="badge bg-secondary">Standart Üye</span>
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>