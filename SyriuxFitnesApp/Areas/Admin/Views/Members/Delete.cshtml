@model SyriuxFitnesApp.Models.AppUser

@{
    ViewData["Title"] = "Üyeyi Sil";
    int randevuSayisi = ViewBag.RandevuSayisi;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-person-x-fill"></i> Üye Silme İşlemi</h4>
                </div>
                <div class="card-body">

                    <h5 class="card-title text-center mb-4">
                        <span class="fw-bold text-danger">@Model.FirstName @Model.LastName</span> isimli üyeyi silmek üzeresiniz.
                    </h5>

                    @if (randevuSayisi > 0)
                    {
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <i class="bi bi-exclamation-triangle-fill fs-3 me-3"></i>
                            <div>
                                <strong>DİKKAT:</strong> Bu üyenin sistemde <strong>@randevuSayisi</strong> adet randevusu görünüyor.<br>
                                <span class="fw-bold text-decoration-underline">Üyeyi silerseniz, randevuları da silinecektir.</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i> Bu üyenin aktif randevusu bulunmuyor.
                        </div>
                    }

                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                        <li class="list-group-item"><strong>Kullanıcı Adı:</strong> @Model.UserName</li>
                    </ul>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <a asp-action="Index" class="btn btn-secondary me-2 px-4">İptal</a>
                            <button type="submit" class="btn btn-danger px-4">Evet, Üyeyi Sil</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>