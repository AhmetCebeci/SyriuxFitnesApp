@model SyriuxFitnesApp.Models.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör";
    // Controller'dan gelen Servis listesi
    var services = ViewBag.Services as List<SyriuxFitnesApp.Models.Service>;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-person-plus-fill"></i> Yeni Antrenör Ekle</h4>
                </div>
                <div class="card-body bg-white">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-bold">Ad Soyad</label>
                            <input asp-for="FullName" class="form-control" placeholder="Örn: Ahmet Yılmaz" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Expertise" class="form-label fw-bold">Unvan / Uzmanlık (Görünen İsim)</label>
                            <input asp-for="Expertise" class="form-control" placeholder="Örn: Kıdemli Eğitmen, Beslenme Uzmanı" />
                            <span asp-validation-for="Expertise" class="text-danger"></span>
                            <div class="form-text">Bu alan hocanın unvanıdır. Vereceği dersleri aşağıdan seçiniz.</div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="WorkStartHour" class="form-label fw-bold">Mesai Başlangıç (0-23)</label>
                                <input asp-for="WorkStartHour" class="form-control" type="number" min="0" max="23" />
                                <span asp-validation-for="WorkStartHour" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="WorkEndHour" class="form-label fw-bold">Mesai Bitiş (0-23)</label>
                                <input asp-for="WorkEndHour" class="form-control" type="number" min="0" max="23" />
                                <span asp-validation-for="WorkEndHour" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card bg-light mb-4">
                            <div class="card-header fw-bold">Verilebilecek Hizmetler (Dersler)</div>
                            <div class="card-body">
                                <div class="row">
                                    @if (services != null)
                                    {
                                        foreach (var service in services)
                                        {
                                            <div class="col-md-6">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="selectedServices" value="@service.ServiceId" id="srv_@service.ServiceId">
                                                    <label class="form-check-label" for="srv_@service.ServiceId">
                                                        @service.ServiceName <small class="text-muted">(@service.DurationMinutes dk)</small>
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <p class="text-danger">Sistemde kayıtlı hizmet bulunamadı. Önce hizmet ekleyiniz.</p>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Listeye Dön</a>
                            <button type="submit" class="btn btn-success px-4">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}