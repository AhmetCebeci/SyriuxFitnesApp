@model SyriuxFitnesApp.Models.Trainer

@{
    ViewData["Title"] = "Antrenör Sil";
    // Controller'dan gelen randevu sayısını alıyoruz (null gelirse 0 olsun)
    int randevuSayisi = ViewBag.AppointmentCount ?? 0;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Antrenör Silme Onayı</h4>
                </div>
                <div class="card-body">

                    <h5 class="card-title text-center mb-4">
                        <span class="fw-bold text-danger">@Model.FullName</span> isimli antrenörü silmek üzeresiniz.
                    </h5>

                    @if (randevuSayisi > 0)
                    {
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <i class="bi bi-info-circle-fill fs-3 me-3"></i>
                            <div>
                                <strong>ÇOK ÖNEMLİ DİKKAT:</strong><br>
                                Bu antrenöre ait <strong>@randevuSayisi</strong> adet kayıtlı randevu bulunmaktadır.<br>
                                <span class="text-decoration-underline fw-bold">Eğer silerseniz, bu randevuların hepsi sistemden kalıcı olarak silinecektir!</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            Bu antrenörün şu an aktif bir randevusu bulunmamaktadır. Güvenle silebilirsiniz.
                        </div>
                    }
                    <div class="card bg-light mb-4">
                        <div class="card-header fw-bold">Antrenör Bilgileri</div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between">
                                <span><i class="bi bi-person-badge me-2"></i> <strong>Ad Soyad:</strong></span>
                                <span>@Model.FullName</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span><i class="bi bi-star me-2"></i> <strong>Uzmanlık:</strong></span>
                                <span>@Model.Expertise</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span><i class="bi bi-clock me-2"></i> <strong>Mesai Saatleri:</strong></span>
                                <span>@Model.WorkStartHour.ToString(@"hh\:mm") - @Model.WorkEndHour.ToString(@"hh\:mm")</span>
                            </li>
                        </ul>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="TrainerId" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <a asp-action="Index" class="btn btn-secondary me-md-2 px-4">
                                <i class="bi bi-x-circle"></i> İptal Et
                            </a>
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash-fill"></i> Evet, Sil
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>