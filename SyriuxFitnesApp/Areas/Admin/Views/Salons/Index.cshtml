@model SyriuxFitnesApp.Models.Salon

@{
    ViewData["Title"] = "Salon Ayarları";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card shadow">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0"><i class="bi bi-gear-fill"></i> Genel Salon Ayarları</h4>
            </div>
            <div class="card-body">
                <form asp-action="Index" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-4">
                        <label asp-for="SalonName" class="form-label fw-bold">Salon Adı</label>
                        <input asp-for="SalonName" class="form-control" placeholder="Örn: Syriux Fitness" />
                        <span asp-validation-for="SalonName" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="OpeningTime" class="form-label fw-bold">Açılış Saati</label>
                            <input asp-for="OpeningTime" class="form-control" type="time" />
                            <span asp-validation-for="OpeningTime" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="ClosingTime" class="form-label fw-bold">Kapanış Saati</label>
                            <input asp-for="ClosingTime" class="form-control" type="time" />
                            <span asp-validation-for="ClosingTime" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save"></i> Ayarları Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>