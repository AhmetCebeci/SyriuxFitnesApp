@{
    ViewData["Title"] = "Yönetim Paneli";
}

<div class="container mt-3">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-2 pb-2 mb-3 border-bottom">
        <h1 class="h3">Admin Dashboard</h1>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <div class="card bg-dark text-white shadow-sm">
                <div class="card-body py-3 d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-1 text-muted" style="font-size:0.8rem; color:#aaa !important;">Aktif Salon Bilgisi</h6>
                        <h4 class="card-title m-0"><i class="bi bi-building me-2"></i> @ViewBag.SalonAdi</h4>
                    </div>
                    <div class="text-end">
                        <span class="d-block small text-muted">Çalışma Saatleri</span>
                        <span class="badge bg-warning text-dark">@ViewBag.CalismaSaatleri</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-2 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title opacity-75 mb-0">Toplam Üye</h6>
                            <h3 class="fw-bold m-0">@ViewBag.UyeSayisi</h3>
                        </div>
                        <i class="bi bi-people fs-1 opacity-50"></i>
                    </div>
                    <small class="card-text" style="font-size: 0.75rem;">Sisteme kayıtlı aktif üye.</small>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-success mb-2 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title opacity-75 mb-0">Antrenörler</h6>
                            <h3 class="fw-bold m-0">@ViewBag.AntrenorSayisi</h3>
                        </div>
                        <i class="bi bi-person-badge fs-1 opacity-50"></i>
                    </div>
                    <small class="card-text" style="font-size: 0.75rem;">Hizmet veren eğitmen.</small>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-info mb-2 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title opacity-75 mb-0">Hizmetler</h6>
                            <h3 class="fw-bold m-0">@ViewBag.ServisSayisi</h3>
                        </div>
                        <i class="bi bi-activity fs-1 opacity-50"></i>
                    </div>
                    <small class="card-text" style="font-size: 0.75rem;">Aktif spor hizmeti.</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <div class="card text-white bg-warning text-dark mb-2 shadow-sm">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title opacity-75 mb-0">Bekleyen Randevu</h6>
                            <h3 class="fw-bold m-0">@ViewBag.BekleyenRandevu</h3>
                        </div>
                        <i class="bi bi-hourglass-split fs-2 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card text-white bg-secondary mb-2 shadow-sm">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title opacity-75 mb-0">Onaylanan Randevu</h6>
                            <h3 class="fw-bold m-0">@ViewBag.OnaylananRandevu</h3>
                        </div>
                        <i class="bi bi-check-circle fs-2 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h5 class="mb-2">Hızlı Yönetim</h5>
            <div class="list-group shadow-sm">

                <a asp-controller="Salons" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-2">
                    <div class="ms-2">
                        <i class="bi bi-building text-info me-2"></i>
                        <strong>Salon Bilgileri</strong>
                        <span class="text-muted small ms-2">- İletişim ve saatleri düzenle.</span>
                    </div>
                    <span class="badge bg-light text-dark rounded-pill"><i class="bi bi-arrow-right"></i></span>
                </a>

                <a asp-controller="Members" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-2">
                    <div class="ms-2">
                        <i class="bi bi-people-fill text-dark me-2"></i>
                        <strong>Üye Listesi</strong>
                        <span class="text-muted small ms-2">- Üyeleri gör ve yönet.</span>
                    </div>
                    <span class="badge bg-light text-dark rounded-pill"><i class="bi bi-arrow-right"></i></span>
                </a>
                <a asp-controller="Services" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-2">
                    <div class="ms-2">
                        <i class="bi bi-activity text-primary me-2"></i>
                        <strong>Hizmet Yönetimi</strong>
                        <span class="text-muted small ms-2">- Hizmet ekle/sil, fiyat güncelle.</span>
                    </div>
                    <span class="badge bg-light text-dark rounded-pill"><i class="bi bi-arrow-right"></i></span>
                </a>

                <a asp-controller="Trainers" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-2">
                    <div class="ms-2">
                        <i class="bi bi-person-badge text-success me-2"></i>
                        <strong>Antrenör Yönetimi</strong>
                        <span class="text-muted small ms-2">- Eğitmenleri ve uzmanlıkları yönet.</span>
                    </div>
                    <span class="badge bg-light text-dark rounded-pill"><i class="bi bi-arrow-right"></i></span>
                </a>

                <a asp-controller="Appointments" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-2">
                    <div class="ms-2">
                        <i class="bi bi-calendar-check text-warning me-2"></i>
                        <strong>Randevu Onay</strong>
                        <span class="text-muted small ms-2">- Talepleri incele ve onayla.</span>
                    </div>
                    <span class="badge bg-light text-dark rounded-pill"><i class="bi bi-arrow-right"></i></span>
                </a>

            </div>
        </div>
    </div>
</div>