@model IEnumerable<SyriuxFitnesApp.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-white rounded h-100 p-4 shadow-sm">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h6 class="mb-0 fs-4">Hizmet (Servis) Yönetimi</h6>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-lg"></i> Yeni Hizmet Ekle
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">@Html.DisplayNameFor(model => model.ServiceName)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.DurationMinutes)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Price)</th>
                                <th scope="col" class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="fw-bold">
                                            <i class="bi bi-activity text-primary me-2"></i> @Html.DisplayFor(modelItem => item.ServiceName)
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-clock"></i> @Html.DisplayFor(modelItem => item.DurationMinutes) Dk
                                            </span>
                                        </td>
                                        <td>
                                            <span class="text-success fw-bold">
                                                @Html.DisplayFor(modelItem => item.Price) ₺
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            <a asp-action="Edit" asp-route-id="@item.ServiceId" class="btn btn-sm btn-outline-warning me-2" title="Düzenle">
                                                <i class="bi bi-pencil-square"></i> Düzenle
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btn btn-sm btn-outline-danger" title="Sil">
                                                <i class="bi bi-trash"></i> Sil
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4">
                                        <span class="text-muted">Henüz kayıtlı bir hizmet yok.</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>