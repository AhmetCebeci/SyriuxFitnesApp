@model SyriuxFitnesApp.Models.Service

@{
    ViewData["Title"] = "Hizmet Detayı";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-info-circle"></i> Hizmet Detayları</h4>
                </div>
                <div class="card-body">

                    <div class="text-center mb-4">
                        <i class="bi bi-activity display-1 text-primary"></i>
                        <h3 class="mt-2">@Html.DisplayFor(model => model.ServiceName)</h3>
                    </div>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="fw-bold"><i class="bi bi-clock me-2"></i> Süre:</span>
                            <span>@Html.DisplayFor(model => model.DurationMinutes) Dakika</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="fw-bold"><i class="bi bi-cash-stack me-2"></i> Ücret:</span>
                            <span class="badge bg-success fs-6">@Html.DisplayFor(model => model.Price) ₺</span>
                        </li>
                    </ul>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                            <i class="bi bi-arrow-left"></i> Geri Dön
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.ServiceId" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Düzenle
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>