@model SyriuxFitnesApp.Models.Appointment

@{
    ViewData["Title"] = "Randevu Düzenle";
}

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="bg-white rounded h-100 p-4 shadow-sm">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h6 class="mb-0 fs-4 text-primary"><i class="bi bi-pencil-square"></i> Randevu Düzenle</h6>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left"></i> Listeye Dön
                    </a>
                </div>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="AppointmentId" />
                    <input type="hidden" asp-for="MemberId" />
                    <input type="hidden" asp-for="ServiceId" /> <input type="hidden" asp-for="StoredPrice" />
                    <input type="hidden" asp-for="StoredDuration" />

                    <div class="alert alert-light border mb-4">
                        <div class="row">
                            <div class="col-md-6">
                                <small class="text-muted d-block">Randevu Sahibi (Üye)</small>
                                <span class="fw-bold fs-5">
                                    @(Model.Member?.FullName ?? "Üye Bilgisi Yüklenemedi")
                                </span>
                            </div>
                            <div class="col-md-6 border-start">
                                <small class="text-muted d-block">Alınan Hizmet</small>
                                <span class="fw-bold fs-5 text-success">
                                    @(Model.Service?.ServiceName ?? "Hizmet Bilgisi Yok")
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="AppointmentDate" class="form-label fw-bold">Tarih</label>
                            <input asp-for="AppointmentDate" class="form-control" type="date"
                                   value="@Model.AppointmentDate.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="AppointmentTime" class="form-label fw-bold">Saat</label>
                            <input asp-for="AppointmentTime" class="form-control" type="time" />
                            <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="TrainerId" class="form-label fw-bold">Antrenör</label>
                            <select asp-for="TrainerId" class="form-select" asp-items="ViewBag.TrainerId"></select>
                            <span asp-validation-for="TrainerId" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <div class="form-check form-switch p-3 border rounded bg-light mt-2">
                                <input class="form-check-input ms-0 me-3" type="checkbox" asp-for="IsApproved" style="transform: scale(1.3);">
                                <label class="form-check-label fw-bold" asp-for="IsApproved">
                                    Bu Randevuyu Onayla
                                </label>
                                <div class="form-text ms-1">İşaretlenirse randevu "Onaylandı" statüsüne geçer.</div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save"></i> Değişiklikleri Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}