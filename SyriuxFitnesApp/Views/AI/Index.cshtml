@model SyriuxFitnesApp.Models.AppUser
@{
    ViewData["Title"] = "AI Smart Trainer";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Syriux AI <span class="text-dark">Smart Trainer</span></h1>
        <p class="lead text-muted">Vücut analizinize göre yapay zeka destekli kişisel programınızı saniyeler içinde oluşturun.</p>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-dark text-white text-center py-3">
                    <h5 class="mb-0"><i class="bi bi-person-bounding-box"></i> Profil Analizi</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Ad Soyad:</span> <span class="fw-bold">@Model.FirstName @Model.LastName</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Boy:</span> <span class="fw-bold">@Model.Height cm</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Kilo:</span> <span class="fw-bold">@Model.Weight kg</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Cinsiyet:</span> <span class="fw-bold">@Model.Gender</span>
                        </li>
                        <li class="list-group-item">
                            <span class="d-block text-muted small mb-1">Fitness Hedefi:</span>
                            <span class="badge bg-success w-100 py-2">@Model.FitnessGoal</span>
                        </li>
                    </ul>
                    <div class="mt-3 text-center">
                        <small class="text-muted fst-italic">Veriler profilinizden otomatik çekilmiştir.</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="row g-3">
                <div class="col-md-6">
                    <button onclick="askAI('workout', this)" class="btn btn-outline-primary w-100 p-4 h-100 shadow-sm action-btn">
                        <i class="bi bi-activity fs-1 d-block mb-2"></i>
                        <span class="fw-bold fs-5">Antrenman Programı Oluştur</span>
                        <br><small>Hedefinize uygun haftalık plan</small>
                    </button>
                </div>
                <div class="col-md-6">
                    <button onclick="askAI('diet', this)" class="btn btn-outline-success w-100 p-4 h-100 shadow-sm action-btn">
                        <i class="bi bi-apple fs-1 d-block mb-2"></i>
                        <span class="fw-bold fs-5">Beslenme Programı Oluştur</span>
                        <br><small>Kalori ihtiyacınıza göre diyet</small>
                    </button>
                </div>
            </div>

            <div class="card mt-4 border-0 shadow" id="resultCard" style="display:none;">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-robot"></i> Yapay Zeka Önerisi</h5>
                    <button class="btn btn-sm btn-light text-primary" onclick="printDiv()">Yazdır</button>
                </div>
                <div class="card-body bg-light">
                    <div id="loadingArea" class="text-center py-5">
                        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;"></div>
                        <p class="mt-3 text-muted">Yapay zeka verilerinizi analiz ediyor...</p>
                    </div>
                    <div id="aiContent" class="p-3" style="display:none;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // BURASI DEĞİŞTİ: btnElement parametresi eklendi
        function askAI(type, btnElement) {
            // Arayüzü hazırla
            $(".action-btn").removeClass("active");

            // BURASI DEĞİŞTİ: 'event' yerine 'btnElement' kullanıldı (Hata çözümü)
            $(btnElement).addClass("active");

            $("#resultCard").fadeIn();
            $("#loadingArea").show();
            $("#aiContent").hide().html("");

            // Controller'a istek at
            // BURASI DEĞİŞTİ: Adres elle yazılmadı, Url.Action kullanıldı (NotFound çözümü)
            $.post('@Url.Action("GetAdvice", "AI")', { adviceType: type }, function (data) {
                $("#loadingArea").hide();
                if (data.success) {
                    // Daktilo efekti veya direkt gösterme
                    $("#aiContent").html(data.content).fadeIn();
                } else {
                    $("#aiContent").html('<div class="alert alert-danger">Bir hata oluştu.</div>').fadeIn();
                }
            }).fail(function() {
                $("#loadingArea").hide();
                $("#aiContent").html('<div class="alert alert-danger">Sunucu hatası veya bağlantı sorunu.</div>').fadeIn();
            });
        }

        function printDiv() {
            var printContents = document.getElementById("aiContent").innerHTML;
            var originalContents = document.body.innerHTML;
            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
            location.reload(); // Sayfayı yenile ki JS bozulmasın
        }
    </script>
}