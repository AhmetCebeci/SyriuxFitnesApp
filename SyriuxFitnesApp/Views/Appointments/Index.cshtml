@model IEnumerable<SyriuxFitnesApp.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-calendar-week"></i> Randevularım</h2>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5 shadow-sm">
            <h4 class="alert-heading">Henüz hiç randevunuz yok.</h4>
            <p>Spor yapmaya başlamak için hemen yeni bir randevu oluşturun!</p>
            <a asp-action="Create" class="btn btn-success mt-2">Randevu Oluştur</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-start border-5 @(item.IsApproved ? "border-success" : "border-warning")">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title text-primary fw-bold mb-0">@item.Service.ServiceName</h5>

                                @if (item.IsApproved)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Onaylandı</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split"></i> Bekliyor</span>
                                }
                            </div>

                            <p class="card-text text-muted mb-2">
                                <i class="bi bi-person-badge me-2"></i> @item.Trainer.FullName
                            </p>

                            <div class="d-flex align-items-center gap-3 mb-3">
                                <span class="badge bg-light text-dark border">
                                    <i class="bi bi-stopwatch"></i> @item.StoredDuration Dk
                                </span>
                                <span class="badge bg-light text-success border border-success">
                                    <i class="bi bi-currency-lira"></i> @item.StoredPrice.ToString("N2") ₺
                                </span>
                            </div>
                            <div class="bg-light p-2 rounded d-flex justify-content-between text-secondary small">
                                <span><i class="bi bi-calendar-event me-1"></i> @item.AppointmentDate.ToString("dd.MM.yyyy")</span>
                                <span><i class="bi bi-clock me-1"></i> @item.AppointmentTime</span>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-top-0 text-end">
                            <button type="button" class="btn btn-sm btn-outline-danger w-100"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteModal"
                                    data-id="@item.AppointmentId">
                                <i class="bi bi-x-circle"></i> İptal Et
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel"><i class="bi bi-exclamation-triangle-fill"></i> Randevu İptali</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body text-center py-4">
                <p class="lead mb-0">Bu randevuyu iptal etmek istediğinize emin misiniz?</p>
                <small class="text-muted">Bu işlem geri alınamaz.</small>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Vazgeç</button>

                <form id="deleteForm" method="post" action="">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger px-4">Evet, İptal Et</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Modal açıldığında tetiklenen olay
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            // Butona tıklandığında data-id değerini al
            var button = event.relatedTarget;
            var appointmentId = button.getAttribute('data-id');

            // Formun action kısmını güncelle: /Appointments/Delete/123
            var form = document.getElementById('deleteForm');
            form.action = '/Appointments/Delete/' + appointmentId;
        });
    </script>
}