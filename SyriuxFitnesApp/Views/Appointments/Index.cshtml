@model IEnumerable<SyriuxFitnesApp.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-calendar-week"></i> Randevularım</h2>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5 shadow-sm">
            <h4 class="alert-heading">Henüz hiç randevunuz yok.</h4>
            <p>Spor yapmaya başlamak için hemen yeni bir randevu oluşturun!</p>
            <a asp-action="Create" class="btn btn-success mt-2">Randevu Oluştur</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-start border-5 @(item.IsApproved ? "border-success" : "border-warning")">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title text-primary fw-bold mb-0">@item.Service.ServiceName</h5>

                                @if (item.IsApproved)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Onaylandı</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split"></i> Bekliyor</span>
                                }
                            </div>

                            <p class="card-text text-muted mb-2">
                                <i class="bi bi-person-badge me-2"></i> @item.Trainer.FullName
                            </p>

                            <div class="d-flex align-items-center gap-3 mb-3">
                                <span class="badge bg-light text-dark border">
                                    <i class="bi bi-stopwatch"></i> @item.StoredDuration Dk
                                </span>
                                <span class="badge bg-light text-success border border-success">
                                    <i class="bi bi-currency-lira"></i> @item.StoredPrice.ToString("N2") ₺
                                </span>
                            </div>
                            <div class="bg-light p-2 rounded d-flex justify-content-between text-secondary small">
                                <span><i class="bi bi-calendar-event me-1"></i> @item.AppointmentDate.ToString("dd.MM.yyyy")</span>
                                <span><i class="bi bi-clock me-1"></i> @item.AppointmentTime</span>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-top-0 text-end">
                            <form asp-action="Delete" asp-route-id="@item.AppointmentId" onsubmit="return confirm('Bu randevuyu iptal etmek istediğinize emin misiniz?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                    <i class="bi bi-x-circle"></i> İptal Et
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>