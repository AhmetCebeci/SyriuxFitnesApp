@model SyriuxFitnesApp.Models.Trainer

@{
    ViewData["Title"] = "Antrenör Sil";
    int randevuSayisi = ViewBag.AppointmentCount ?? 0;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Antrenör Silme Onayı</h4>
                </div>
                <div class="card-body">

                    <h5 class="card-title text-center mb-4">
                        <span class="fw-bold text-danger">@Model.FullName</span> isimli antrenörü silmek üzeresiniz.
                    </h5>

                    @if (randevuSayisi > 0)
                    {
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <i class="bi bi-info-circle-fill fs-3 me-3"></i>
                            <div>
                                <strong>ÇOK ÖNEMLİ DİKKAT:</strong><br>
                                Bu antrenöre ait <strong>@randevuSayisi</strong> adet kayıtlı randevu bulunmaktadır.<br>
                                <span class="text-decoration-underline fw-bold">Eğer silerseniz, bu randevuların hepsi sistemden kalıcı olarak silinecektir!</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">
                            Bu antrenörün aktif randevusu bulunmamaktadır.
                        </div>
                    }

                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item"><strong>Unvan:</strong> @Model.Expertise</li>
                        <li class="list-group-item"><strong>Çalışma Saatleri:</strong> @Model.WorkStartHour:00 - @Model.WorkEndHour:00</li>
                    </ul>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="TrainerId" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="bi bi-x-circle"></i> İptal Et
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Evet, Sil ve Tüm Randevularını Kaldır
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>