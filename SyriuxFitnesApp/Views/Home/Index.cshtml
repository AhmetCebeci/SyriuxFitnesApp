@using Microsoft.AspNetCore.Identity
@using SyriuxFitnesApp.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center mt-5">
    @if (SignInManager.IsSignedIn(User))
    {
        // Kullanıcı giriş yapmışsa ismini çekip gösteriyoruz
        var user = await UserManager.GetUserAsync(User);
        var firstName = user?.FirstName ?? "Üye";

        <h1 class="display-3 fw-bold text-primary">Hoşgeldin, @firstName!</h1>
        <p class="lead mt-3">Bugün antrenman yapmaya hazır mısın?</p>

        <div class="mt-4">
            <a class="btn btn-lg btn-success" asp-controller="Appointments" asp-action="Create">Hemen Randevu Al</a>
        </div>
    }
    else
    {
        <h1 class="display-4">Syriux Fitness'a Hoşgeldiniz</h1>
        <p class="lead">Sağlıklı bir yaşam için ilk adımı atın.</p>
        <p>Hemen kayıt olun ve profesyonel antrenörlerimizle çalışmaya başlayın.</p>

        <div class="mt-4">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-lg btn-primary">Hemen Üye Ol</a>
        </div>
    }
</div>